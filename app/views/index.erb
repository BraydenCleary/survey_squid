<div class='container'>

  <h1 class='slogan'>Surveys and Squids.</h1>


  <div class='log-in'>
    <span id='login-dropdown'>Log In</span>
    <form action="/sessions/new" method="post" id='log-in-form'>
      <input class='input' type="text" name="email" placeholder="yourname@email.com">
      <input class='input' type="password" name="password" placeholder="password">
      <input class='submit' type="submit" value="Log in!">
    </form>
  <h3><%=@login_error%></h3>
  </div>


  <div class='squid-photo'>
    <img src='/images/cartoon-squid.gif' />
  </div>

  <div class='sign-up'>
    <span id='signup-dropdown'>Sign Up</span>
    <form action="/users/new" method="post" id='sign-up-form'>
      <input class='input' type="text" name="name" placeholder="Your name">
      <input class='input' type="text" name="email" placeholder="yourname@email.com">
      <input class='input' type="password" name="password" placeholder="password">
      <input class='input' type="password" name="password_confirmation" placeholder="password">
      <input class='submit' type="submit" value="Sign up!">
    </form>
    <h3><%=@creation_errors%></h3>
  </div>




</div>



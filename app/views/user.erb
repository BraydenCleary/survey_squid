<h1><%=@user.name%>'s Survey Squid Profile</h1>

<h2>Access Your Survey Results</h2>
<ul>
  <%@user_surveys.each do |survey|%>
  <li>
    <a href="/surveys/<%=survey.id%>"><%=survey.title%></a>
    <form action="/surveys/<%=survey.id%>" method='post'>
      <input type="hidden" name="_method" value="delete" /> 
      <input type='submit' value='Delete Survey' />
    </form>
  </li>
  <%end%>
</ul>

<h2>Take a new Survey!</h2>
<ul>
  <%@surveys.each do |survey|%>
    <li><a href="/surveys/<%="#{survey.id}"%>/responses"><%=survey.title%></a></li>
  <%end%>
</ul>
